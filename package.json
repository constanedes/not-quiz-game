{
  "name": "not-quiz-game",
  "version": "0.2.5",
  "description": "A CLI based interactive question and answer game",
  "keywords": [
    "game",
    "quiz",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/constanedes/quiz-game.git"
  },
  "license": "MIT",
  "author": {
    "email": "constantinoedes@gmail.com",
    "name": "Constantino Edes",
    "url": "https://www.constantinoedes.dev"
  },
  "type": "module",
  "main": "./build/src/index.js",
  "bin": "./build/src/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "dev": "nodemon build/src/index.js",
    "format": "rome format src --write",
    "lint": "rome format src --verbose && rome check --apply-unsafe src",
    "prepare": "git config --local core.hooksPath .githooks || echo 'Can not set git hooks'",
    "prestart": "pnpm i && pnpm run build",
    "start": "node build/src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "nodemonConfig": {
    "stdin": false
  },
  "dependencies": {
    "chalk": "5.2.0",
    "figlet": "1.6.0",
    "fs-extra": "11.1.1",
    "gradient-string": "2.0.2",
    "inquirer": "9.2.7",
    "ora": "6.3.1",
    "type-fest": "3.12.0"
  },
  "devDependencies": {
    "@types/figlet": "1.5.6",
    "@types/fs-extra": "11.0.1",
    "@types/gradient-string": "1.1.2",
    "@types/inquirer": "9.0.3",
    "@types/node": "20.3.1",
    "nodemon": "2.0.22",
    "rome": "12.1.3",
    "typescript": "5.1.3"
  },
  "engines": {
    "node": ">=16"
  }
}