{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "module": "Node16",
    "rootDir": "./",
    "moduleResolution": "node16",
    "sourceMap": false,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "pretty": true,
    "newLine": "lf",
  }
}